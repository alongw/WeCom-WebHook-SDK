{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types"],
        "types": ["node"],
        "declaration": true,
        "rootDir": "src",
        "outDir": "dist"
    }
}
